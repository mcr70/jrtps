<?xml version="1.0" encoding="UTF-8"?>
<Configuration strict="true">
    <Appenders>
        <Appender type="Console" name="STDOUT">
            <Layout type="PatternLayout" pattern="%d{HH:mm:ss.SSS} %-5p %20.20c{10} %13.13t - %m%n" />
        </Appender>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT" />
        </Root>

        <Logger name="net.sf.jrtps.rtps.RTPSReader" level="debug" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
        <Logger name="net.sf.jrtps.rtps.RTPSWriter" level="debug" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
        
        <Logger name="dds.sec.auth" level="warn" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
        <Logger name="dds.sec.crypto" level="WARN" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
    </Loggers>

</Configuration>
