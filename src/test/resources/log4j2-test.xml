<?xml version="1.0" encoding="UTF-8"?>
<Configuration strict="true">
    <Appenders>
        <Appender type="Console" name="STDOUT">
            <Layout type="PatternLayout" pattern="%d{HH:mm:ss.SSS} %-5p %20.20c{10} %13.13t - %m%n" />
        </Appender>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="STDOUT" />
        </Root>
        
        <Logger name="net.sf.jrtps.udds" level="INFO" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
        <Logger name="dds.sec.auth" level="DEBUG" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
        <Logger name="dds.sec.crypto" level="DEBUG" additivity="false">
            <AppenderRef ref="STDOUT" />
        </Logger>
    </Loggers>

</Configuration>
